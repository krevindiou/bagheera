{% extends 'base.html.twig' %}

{% block page_title 'report.list_page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ 'report.list_page_title'|trans }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="span12 btn-group">
        <a href="{{ path('report_create', {type: 'sum'}) }}" class="btn btn-small"><i class="icon-plus-sign"></i> {{ 'report.sum_create_link'|trans }}</a>
        <a href="{{ path('report_create', {type: 'average'}) }}" class="btn btn-small"><i class="icon-plus-sign"></i> {{ 'report.average_create_link'|trans }}</a>
        {#<a href="{{ path('report_create', {type: 'distribution'}) }}" class="btn btn-small"><i class="icon-plus-sign"></i> {{ 'report.distribution_create_link'|trans }}</a>#}
        {#<a href="{{ path('report_create', {type: 'estimate'}) }}" class="btn btn-small"><i class="icon-plus-sign"></i> {{ 'report.estimate_create_link'|trans }}</a>#}
    </div>
</div>

{% if reports|length > 0 %}
<div class="row">
    <form class="span12" method="post" action="">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th>{{ 'report.type'|trans }}</th>
                    <th>{{ 'report.title'|trans }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for report in reports %}
                <tr>
                    <td class="check"><input type="checkbox" name="reportsId[]" value="{{ report.reportId }}" /></td>
                    <td>{{ ('report.type_' ~ report.type)|trans }}</td>
                    <td>{{ report.title }}</td>
                    <td class="actions"><a href="{{ path('report_update', {'reportId': report.reportId}) }}" class="btn btn-mini" title="{{ 'report.update_link'|trans }}"><i class="icon-pencil"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="btn-group form-actions hide">
            <button type="submit" name="delete" class="btn" data-toggle="modal" data-target="#modal-confirmation"><i class="icon-trash"></i> {{ 'report.delete_button'|trans }}</button>
        </div>
    </form>
</div>
{% endif %}
{% endblock %}
