#!/usr/bin/env bash

if [ $# -eq 0 ]; then
    echo "Usage : build <project_dir>"
    exit
fi

if [ -z "$1" ] || [ ! -d "$1" ]; then
    echo '"project_dir" not found'
    exit
fi

project_dir=$1

cd $project_dir
mkdir /dev/shm/bagheera
setfacl -R -m u:www-data:rwX -m u:`whoami`:rwX /dev/shm/bagheera
setfacl -dR -m u:www-data:rwx -m u:`whoami`:rwx /dev/shm/bagheera
composer install
cd -
