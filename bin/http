#!/usr/bin/env bash

cid=$(docker ps -a|grep bagheera_nginx|cut -c 1-12)

if [ 'Darwin' == $(uname -s) ]; then
    alias 'xdg-open'='open'
fi

if [ -n "$cid" ]; then
    ip=$(docker inspect --format='{{.NetworkSettings.IPAddress}}' $cid)
    xdg-open http://$ip
else
    echo "\"$cid\" not found !"
fi
