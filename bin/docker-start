#!/usr/bin/env bash

project_dir=$(cd "$(dirname "$0")" && cd .. && pwd)
env=$1

if [[ ! -f $project_dir/docker/.docker-compose.env ]]; then
    echo "Missing $project_dir/docker/.docker-compose.env"
    exit 1
fi

suffix='dev'
if [[ $env = 'prod' ]]; then
    suffix='prod'
fi

docker-compose -f "$project_dir/docker/docker-compose-$suffix.yml" up -d "${@:2}"

"$project_dir/bin/docker-logs"
