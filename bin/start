#!/usr/bin/env bash

project_dir=$(cd "$(dirname "$0")" && cd .. && pwd)
project_name=$(basename "$project_dir")
env=$1

if [ ! -f "${project_dir}/.docker-compose.env" ]; then
    echo "Missing ${project_dir}/.docker-compose.env";
    exit 1;
fi

if [ 'prod' == "$env" ]; then
    docker-compose -f ${project_dir}/docker-compose-prod.yml up -d "${@:2}"
else
    docker-compose -f ${project_dir}/docker-compose-dev.yml up -d "${@:2}"
fi
