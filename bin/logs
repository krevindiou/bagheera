#!/usr/bin/env bash

project_dir=$(cd "$(dirname "$0")" && cd .. && pwd)
project_name=$(basename "$project_dir")
env=$1

if [ 'prod' == "$env" ]; then
    docker-compose -f ${project_dir}/docker-compose-prod.yml logs "${@:2}"
else
    docker-compose -f ${project_dir}/docker-compose-dev.yml logs "${@:2}"
fi
