{% extends '::base.html.twig' %}

{% block pageTitle 'report_list_page_title'|trans %}

{% block content %}
<div class="btn-group">
    <a href="{{ path('report_new', {type: 'sum'}) }}" class="btn"><i class="icon-plus-sign"></i> {{ 'report_sum_new_link'|trans }}</a>
    <a href="{{ path('report_new', {type: 'average'}) }}" class="btn"><i class="icon-plus-sign"></i> {{ 'report_average_new_link'|trans }}</a>
    {#<a href="{{ path('report_new', {type: 'distribution'}) }}" class="btn"><i class="icon-plus-sign"></i> {{ 'report_distribution_new_link'|trans }}</a>#}
    {#<a href="{{ path('report_new', {type: 'estimate'}) }}" class="btn"><i class="icon-plus-sign"></i> {{ 'report_estimate_new_link'|trans }}</a>#}
</div>
<br/>

{% if reports|length > 0 %}
<form method="post" action="">
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th></th>
            <th>{{ 'report_type'|trans }}</th>
            <th>{{ 'report_title'|trans }}</th>
            <th></th>
        </tr>
        {% for report in reports %}
        <tr>
            <td class="check"><input type="checkbox" name="reportsId[]" value="{{ report.reportId }}" /></td>
            <td>{{ ('report_type_' ~ report.type)|trans }}</td>
            <td>{{ report.title }}</td>
            <td><a href="{{ path('report_edit', {'reportId': report.reportId}) }}"><i class="icon-pencil"></i> {{ 'report_edit_link'|trans }}</a></td>
        </tr>
        {% endfor %}
    </table>

    <div class="btn-group">
        <button type="submit" name="delete" class="btn"><i class="icon-trash"></i> {{ 'report_delete_button'|trans }}</button>
    </div>
</form>
{% endif %}
{% endblock %}
