<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <title>Bagheera - {{ block('page_title') }}</title>
        <meta name="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        {% stylesheets filter='lessphp,cssrewrite'
            'components/bootstrap/css/bootstrap.min.css'
            'components/bootstrap/css/bootstrap-responsive.min.css'
            'components/jquery-ui/themes/smoothness/jquery-ui.min.css'
            'components/jquery-ui/themes/smoothness/jquery.ui.theme.css'
            'components/font-awesome/css/font-awesome.min.css'
            'bundles/krevindioubagheera/less/main.less'
        %}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
        {% endstylesheets %}
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">
        {% block stylesheets %}{% endblock %}

        {% if app.debug %}
        {{ nelmio_js_error_logger() }}
        {% endif %}

        <link rel="icon" href="{{ asset('/favicon.png') }}" type="image/png" />
        <link rel="shortcut icon" href="{{ asset('/favicon.ico') }}" />
    </head>
    <body class="page-{{ app.request.get('_route')|replace({'_' : '-'}) }}">
        <div id="wrapper">
            <div id="topbar">
                <div class="container">
                    <div id="top-nav">
                        {% if app.user is not empty %}
                        <ul class="pull-right">
                            <li><a href="{{ path('member_profile') }}"><i class="icon-user"></i> {{ app.user.email }}</a></li>
                            <li><a href="{{ path('logout') }}"><i class="icon-signout"></i> {{ 'member.logout_link'|trans }}</a></li>
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div id="header">
                <div class="container">
                    <a href="{{ app.user is not null ? path('account_home') : path('member_login') }}" class="brand"><img class="logo" src="{{ asset('/bundles/krevindioubagheera/img/logo.png') }}" alt="Logo" /></a>

                    {% if app.user is not empty %}
                    <a href="javascript:;" class="btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <i class="icon-reorder"></i>
                    </a>
                    <div class="nav-collapse">
                        <ul id="main-nav" class="nav pull-right">
                            <li class="nav-icon{{ 'account_home' == app.request.get('_route') ? ' active' : '' }}">
                                <a href="{{ path('account_home') }}">
                                    <i class="icon-home"></i>
                                    <span>{{ 'home_link'|trans }}</span>
                                </a>
                            </li>

                            <li{{ 'account' in app.request.get('_route') and 'account_home' != app.request.get('_route') ? ' class="active"' : '' }}><a href="{{ path('account_list') }}"><i class="icon-tasks"></i> {{ 'account.list_page_title'|trans }}</a></li>

                            <li class="{{ 'operation' in app.request.get('_route') ? 'active ' : '' }}dropdown">
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-book"></i>
                                    <span>{{ 'operation.list_page_title'|trans }}</span>
                                    <b class="caret"></b>
                                </a>

                                <ul class="dropdown-menu pull-right">
                                    {% for bank in global_banks %}
                                        <li class="dropdown-submenu">
                                            <a tabindex="-1" href="#">{{ bank.name }}</a>

                                            <ul class="dropdown-menu">
                                            {% if bank.accounts is not empty %}
                                                {% for account in bank.accounts %}
                                                    <li><a tabindex="-1" href="{{ path('operation_list', {'accountId': account.accountId}) }}">{{ account.name }}</a></li>
                                                {% endfor  %}
                                            {% else %}
                                                <li><a tabindex="-1" href="{{ path('account_new_with_bank', {'bankId': bank.bankId}) }}"><i class="icon-plus-sign"></i> {{ 'account.new_link'|trans }}</a></li>
                                            {% endif %}
                                            </ul>
                                        </li>
                                    {% endfor  %}
                                </ul>
                            </li>

                            <li class="{{ 'scheduler' in app.request.get('_route') ? 'active ' : '' }}dropdown">
                                <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-time"></i>
                                    <span>{{ 'scheduler.list_page_title'|trans }}</span>
                                    <b class="caret"></b>
                                </a>

                                <ul class="dropdown-menu pull-right">
                                    {% for bank in global_banks %}
                                        <li class="dropdown-submenu">
                                            <a tabindex="-1" href="#">{{ bank.name }}</a>

                                            <ul class="dropdown-menu">
                                            {% if bank.accounts is not empty %}
                                                {% for account in bank.accounts %}
                                                    <li><a tabindex="-1" href="{{ path('scheduler_list', {'accountId': account.accountId}) }}">{{ account.name }}</a></li>
                                                {% endfor  %}
                                            {% else %}
                                                <li><a tabindex="-1" href="{{ path('account_new_with_bank', {'bankId': bank.bankId}) }}"><i class="icon-plus-sign"></i> {{ 'account.new_link'|trans }}</a></li>
                                            {% endif %}
                                            </ul>
                                        </li>
                                    {% endfor  %}
                                </ul>
                            </li>

                            <li{{ 'report' in app.request.get('_route') ? ' class="active"' : '' }}>
                                <a href="{{ path('report_list') }}"><i class="icon-bar-chart"></i> {{ 'report.list_page_title'|trans }}</a>
                            </li>
                        </ul>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div id="masthead">
                <div class="container">
                    <div class="masthead-pad">
                        <div class="masthead-text">
                            <h2>{% block page_title %}{% endblock %}</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div id="content">
                <div class="container">
                    {% for key, messages in app.session.flashbag.all() %}
                        <div class="alert alert-{{ key }}">
                            <a class="close" data-dismiss="alert" href="#">&times;</a>

                            {% for message in messages %}
                                {{ message|trans }}
                            {% endfor %}
                        </div>
                    {% endfor %}

                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>

        <div id="footer">
            <div class="container">&copy; 2011-{{ 'now'|date('Y') }} Bagheera</div>
        </div>

        <div id="modal-confirmation" class="modal hide fade" tabindex="-1">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>{{ 'modal_confirmation_title'|trans }}</h3>
            </div>
            <div class="modal-body">
                <p>{{ 'modal_confirmation_body'|trans }}</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary">{{ 'modal_confirmation_action_ok'|trans }}</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">{{ 'modal_confirmation_action_cancel'|trans }}</button>
            </div>
        </div>
        {% javascripts
            "components/jquery/jquery.js"
            "components/jquery-ui/ui/minified/jquery-ui.min.js"
            "components/flot/jquery.flot.js"
            "components/flot/jquery.flot.time.js"
            "components/bootstrap/js/bootstrap.min.js"
            "components/mailcheck/src/mailcheck.min.js"
            "bundles/krevindioubagheera/js/main.js"
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <!--[if lte IE 8]>
        {% javascripts
            "components/flot/excanvas.min.js"
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <![endif]-->
        <script src="/{{ app.request.locale }}/translations.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
