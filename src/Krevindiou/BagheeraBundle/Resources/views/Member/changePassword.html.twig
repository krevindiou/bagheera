{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title 'member.change_password.page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ 'member.change_password.page_title'|trans }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="span3">
        {{ include("KrevindiouBagheeraBundle:Member:profileMenu.html.twig") }}
    </div>
    <div class="span9">
        {{ form_start(changePasswordForm, {action: path('member_change_password'), attr: {novalidate: true, class: 'form-horizontal'}}) }}
            {{ form_row(changePasswordForm.password) }}

            <div class="form-actions">
                {{ form_widget(changePasswordForm.submit) }}
            </div>
        {{ form_end(changePasswordForm) }}
    </div>
</div>
{% endblock %}
