{% extends '::base.html.twig' %}

{% block pageTitle 'operation_form_page_title'|trans %}

{% block content %}
<div class="btn-group">
    <a href="{{ path('operation_list', {'accountId': account.accountId}) }}" class="btn"><i class="icon-chevron-left"></i> {{ 'back_link'|trans }}</a>
</div>

<form action="" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(operationForm) }}>
    {{ form_row(operationForm.type) }}
    {{ form_row(operationForm.thirdParty) }}
    {{ form_row(operationForm.amount) }}
    {{ form_row(operationForm.category) }}
    {{ form_row(operationForm.paymentMethod) }}
    {{ form_row(operationForm.transferAccount) }}
    {{ form_row(operationForm.valueDate) }}
    {{ form_row(operationForm.notes) }}
    {{ form_row(operationForm.isReconciled) }}
    {{ form_rest(operationForm) }}

    <div class="control-group">
        <div class="controls">
            <input type="submit" class="btn btn-large btn-primary" value="{{ 'operation_form_submit_button'|trans }}"/>
        </div>
    </div>
</form>
{% endblock %}
