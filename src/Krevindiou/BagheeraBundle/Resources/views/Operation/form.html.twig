{% extends '::base.html.twig' %}

{% block pageTitle 'operation_form_page_title'|trans %}

{% block content %}
<a href="{{ path('operation_list', {'accountId': account.accountId}) }}" class="back">{{ 'back_link'|trans }}</a>

<form action="" novalidate="novalidate" method="post" {{ form_enctype(operationForm) }}>
    {{ form_widget(operationForm) }}

    <div class="form_button">
        <input type="submit" value="{{ 'operation_form_submit_button'|trans }}"/>
    </div>
</form>
{% endblock %}
