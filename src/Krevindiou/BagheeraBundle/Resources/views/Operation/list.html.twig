{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title 'operation_list_page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ account.bank.name }} - {{ account.name }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="span4">
        <h3>{{ account.getBank().getName() }} - {{ account.getName() }}</h3>
        <hr/>
        <table class="table stat-table">
            <tbody>
                <tr>
                    <td class="value {{ balance < 0 ? 'negative' : 'positive' }}">{{ balance|money(account.currency) }}</td>
                    <td class="full">{{ 'balance'|trans }}</td>
                </tr>
                <tr>
                    <td class="value {{ reconciledBalance < 0 ? 'negative' : 'positive' }}">{{ reconciledBalance|money(account.currency) }}</td>
                    <td class="full">{{ 'reconciled_balance'|trans }}</td>
                </tr>
            </tbody>
        </table>
        <div class="btn-group">
            <a href="{{ path('operation_new', {'accountId': account.accountId}) }}" class="btn btn-small{{ tipNewOperation ? ' tip' : '' }}"{% if tipNewOperation %} title="{{ "tip_new_operation"|trans }}"{% endif %}><i class="icon-plus-sign"></i> {{ 'operation_new_link'|trans }}</a>
            <a href="{{ path('operation_search_form', {'accountId': account.accountId}) }}" class="btn btn-small search"><i class="icon-search"></i> {{ 'operation_search_link'|trans }}</a>
            <a href="{{ path('scheduler_list', {'accountId': account.accountId}) }}" class="btn btn-small"><i class="icon-time"></i> {{ 'scheduler_list'|trans }}</a>
        </div>
    </div>
    <div class="span8">
        <div id="synthesis" class="chart-holder graph"></div>
    </div>
</div>

<div class="row">
    {% if operations|length > 0 %}
    <form id="operation" class="span{% if displaySearch %}7{% else %}12{% endif %}" method="post" action="">
        <table id="table-operations" class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>{{ 'operation_third_party'|trans }}</th>
                    <th class="amount">{{ 'operation_amount'|trans }}</th>
                    <th></th>
                    <th>{{ 'operation_category'|trans }}</th>
                    <th class="date">{{ 'operation_value_date'|trans }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for operation in operations %}
                <tr>
                    <td class="check"><input type="checkbox" name="operationsId[]" value="{{ operation.operationId }}" /></td>
                    <td class="status">
                        {% if operation.reconciled %}
                        <i class="icon-ok-sign" title="{{ 'operation_reconciled'|trans }}"></i>&nbsp;
                        {% endif %}

                        {% if operation.scheduler is not null %}
                        <i class="icon-time" title="{{ 'operation_scheduler'|trans }}"></i>
                        {% endif %}
                    </td>
                    <td>{{ operation.thirdParty }}</td>
                    <td class="amount {{ (operation.amount < 0) ? 'negative' : 'positive' }}">{{ operation.amount|money(operation.account.currency) }}</td>
                    <td class="payment-method">
                        <i class="{% spaceless %}
                        {% if operation.paymentMethod.name == 'credit_card' %}
                            icon-credit-card
                        {% elseif operation.paymentMethod.name == 'check' %}
                            icon-list-alt
                        {% elseif operation.paymentMethod.name == 'withdrawal' %}
                            icon-money
                        {% elseif operation.paymentMethod.name == 'transfer' %}
                            icon-exchange
                        {% elseif operation.paymentMethod.name == 'deposit' %}
                            icon-money
                        {% endif %}
                        {% endspaceless %}" title="{{ ('payment_method_' ~ operation.paymentMethod.name)|trans }}"></i>
                    </td>
                    <td>{{ (operation.category is not null) ? operation.category.name : '' }}</td>
                    <td class="date">{{ operation.valueDate|localizeddate('medium', 'none') }}</td>
                    <td class="actions"><a href="{{ path('operation_edit', {'operationId': operation.operationId}) }}" class="btn btn-mini" title="{{ 'operation_edit_link'|trans }}"><i class="icon-pencil"></i></a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="btn-group form-actions hide">
            <button type="submit" name="delete" class="btn delete" data-toggle="modal" data-target="#modal-confirmation"><i class="icon-trash"></i> {{ 'operation_delete_button'|trans }}</button>
            <button type="submit" name="reconcile" class="btn reconcile" data-toggle="modal" data-target="#modal-confirmation"><i class="icon-ok-sign"></i> {{ 'operation_reconcile_button'|trans }}</button>
        </div>

        <div class="pagination pagination-right">
        {{ pagerfanta(operations, 'twitter_bootstrap') }}
        </div>
    </form>

    <div id="operation-search" class="span5{% if not displaySearch %} hide{% endif %}">
        {{ render(controller("KrevindiouBagheeraBundle:OperationSearch:form", {"account": account, "display": displaySearch})) }}
    </div>

    <script type="text/javascript">
        require(
            ["main"],
            function() {
                require(
                    [
                        "jquery_flot",
                        "jquery_flot_time"
                    ],
                    function() {
                        require(
                            [
                                "/manager/account-{{ account.accountId }}/report-synthesis.js"
                            ],
                            function() {
                            }
                        );
                    }
                );
            }
        );
    </script>
    {% endif %}
</div>
{% endblock %}
