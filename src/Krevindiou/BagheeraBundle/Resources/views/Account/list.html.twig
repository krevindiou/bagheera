{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title 'account_list_page_title'|trans %}

{% block content %}
<div class="row">
    <div class="span12 btn-group">
        <a href="{{ path('bank_new') }}" class="btn"><i class="icon-plus-sign"></i> {{ 'bank_new_link'|trans }}</a>
    </div>
</div>

{% if banks|length > 0 %}
<div class="row">
    {% for bank in banks %}
    <div class="span12">
        <h3 class="pull-left">
            {% if bank.deleted %}
                <span class="label label-important">{{ 'account_deleted'|trans }}</span>
            {% elseif bank.closed %}
                <span class="label label-warning">{{ 'account_closed'|trans }}</span>
            {% endif %}
            {{ bank.name }}
        </h3>
        {% if bank.active %}
        <div class="pull-right">
            <a href="{{ path('bank_edit', {'bankId': bank.bankId}) }}" class="btn"><i class="icon-pencil"></i> {{ 'bank_edit_link'|trans }}</a>
            <a href="{{ path('account_new_with_bank', {'bankId': bank.bankId}) }}" class="btn"><i class="icon-plus-sign"></i> {{ 'account_new_link'|trans }}</a>
        </div>
        {% endif %}
    </div>
    {% if bank.active %}
    <div class="span12">
        {% if bank.accounts is not empty %}
        <form method="post" action="">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th></th>
                        <th>{{ 'account_name'|trans }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for account in bank.accounts %}
                    <tr>
                        <td class="check"><input type="checkbox" name="accountsId[]" value="{{ account.accountId }}"/></td>
                        <td><a href="{{ path('operation_list', {'accountId': account.accountId}) }}">{{ account.name }}</a></td>
                        <td class="actions"><a href="{{ path('account_edit', {'accountId': account.accountId}) }}" class="btn btn-mini" title="{{ 'account_edit_link'|trans }}"><i class="icon-pencil"></i></a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="btn-group form-actions hide">
                <button type="submit" name="delete" class="btn" data-toggle="modal" data-target="#modal-confirmation"><i class="icon-trash"></i> {{ 'account_delete_button'|trans }}</button>
                {#<button type="submit" name="share" class="btn" data-toggle="modal" data-target="#modal-confirmation"><i class="icon-share-alt"></i> {{ 'account_share_button'|trans }}</button>#}
            </div>
        </form>
        {% else %}
            <em>{{ 'account_none'|trans }}</em>
        {% endif %}
    </div>
    {% endif %}
    {% endfor %}
</div>
{% endif %}
{% endblock %}
