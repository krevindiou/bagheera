{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title 'user.register.page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ 'user.register.page_title'|trans }}</li>
{% endblock %}

{% block content %}
<form action="{{ path('user_register') }}" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(registerForm) }}>
    {{ form_widget(registerForm) }}

    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="{{ 'user.register.submit_button'|trans }}"/>
        <a href="{{ path('user_login') }}" class="btn"> {{ 'cancel_link'|trans }}</a>
    </div>
</form>
{% endblock %}
