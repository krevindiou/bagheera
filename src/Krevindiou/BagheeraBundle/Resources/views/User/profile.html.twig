{% extends '::base.html.twig' %}

{% block page_title 'user_profile_page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ 'user_profile_page_title'|trans }}</li>
{% endblock %}

{% block content %}
<form action="{{ path('user_profile') }}" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(profileForm) }}>
    {{ form_widget(profileForm) }}

    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="{{ 'user_profile_submit_button'|trans }}"/>
    </div>
</form>
{% endblock %}
