{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title 'user.forgot_password.page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ 'user.forgot_password.page_title'|trans }}</li>
{% endblock %}

{% block content %}
<form action="{{ path('user_forgot_password') }}" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(forgotPasswordForm) }}>
    {{ form_widget(forgotPasswordForm) }}

    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="{{ 'user.forgot_password.submit_button'|trans }}"/>
        <a href="{{ path('user_login') }}" class="btn">{{ 'cancel_link'|trans }}</a>
    </div>
</form>
{% endblock %}
