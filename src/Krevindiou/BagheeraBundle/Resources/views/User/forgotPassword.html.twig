{% extends '::base.html.twig' %}

{% block page_title 'user_forgot_password_page_title'|trans %}

{% block content %}
<div class="btn-group">
    <a href="{{ path('login') }}" class="btn"><i class="icon-chevron-left"></i> {{ 'back_link'|trans }}</a>
</div>

<form action="{{ path('user_forgot_password') }}" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(forgotPasswordForm) }}>
    {{ form_widget(forgotPasswordForm) }}

    <div class="control-group">
        <div class="controls">
            <input type="submit" class="btn btn-large btn-primary" value="{{ 'user_forgot_password_submit_button'|trans }}"/>
        </div>
    </div>
</form>
{% endblock %}
