{% extends '::base.html.twig' %}

{% block content %}
<h1>Forgot password</h1>

<a href="{{ path('login') }}" class="back">{% trans %}back{% endtrans %}</a>

<form action="{{ path('user_forgot_password') }}" novalidate="novalidate" method="post" {{ form_enctype(forgotPasswordForm) }}>
    {{ form_widget(forgotPasswordForm) }}

    <div class="formButton">
        <input type="submit" value="{% trans %}userSendResetPasswordAction{% endtrans %}"/>
    </div>
</form>
{% endblock %}
