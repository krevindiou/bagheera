{% extends '::base.html.twig' %}

{% block pageTitle 'user_reset_password_page_title'|trans %}

{% block content %}
<form action="{{ path('user_reset_password', {'key': key}) }}" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(resetPasswordForm) }}>
    {{ form_widget(resetPasswordForm) }}

    <div class="control-group">
        <div class="controls">
            <input type="submit" class="btn btn-large btn-primary" value="{{ 'user_reset_password_submit_button'|trans }}"/>
        </div>
    </div>
</form>
{% endblock %}
