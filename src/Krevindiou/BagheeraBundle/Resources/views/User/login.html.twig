{% extends '::base.html.twig' %}

{% block pageTitle 'user_login_page_title'|trans %}

{% block content %}
{% spaceless %}
<form action="{{ path('login_check') }}" novalidate="novalidate" method="post">
    <div>
        {% if error %}
        <ul class="form_errors"><li>{{ error.message|trans([], 'validators') }}</li></ul>
        {% endif %}
        <div>
            <div class="form_label">
                <label for="username">{{ 'user_email'|trans }}</label>
            </div>
            <div class="form_field">
                <input type="email" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div>
            <div class="form_label">
                <label for="password">{{ 'user_password'|trans }}</label>
            </div>
            <div class="form_field">
                <input type="password" id="password" name="_password"/>
            </div>
        </div>
    </div>
    <div class="form_button">
        <input type="submit" name="login" value="{{ 'user_login_submit_button'|trans }}"/>
    </div>
</form>
{% endspaceless %}
{% endblock %}
