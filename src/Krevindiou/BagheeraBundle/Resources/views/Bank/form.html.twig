{% extends 'KrevindiouBagheeraBundle::base.html.twig' %}

{% block page_title bankForm.vars.value.bankId is null ? 'bank_new_form_page_title'|trans : 'bank_edit_form_page_title'|trans %}

{% block breadcrumb %}
    <li class="active">{{ bankForm.vars.value.bankId is null ? 'bank_new_form_page_title'|trans : 'bank_edit_form_page_title'|trans }}</li>
{% endblock %}

{% block content %}
<form action="" novalidate="novalidate" method="post" class="form-horizontal" {{ form_enctype(bankForm) }}>
    {{ form_widget(bankForm) }}

    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="{{ 'bank_form_submit_button'|trans }}"/>
        <a href="{{ path('account_list') }}" class="btn">{{ 'cancel_link'|trans }}</a>
    </div>
</form>
{% endblock %}

{% form_theme bankForm _self %}

{% block _bank_type_provider_widget %}
{% spaceless %}
    {{ block('choice_widget') }}
    {% if attr.bankId is not null and value != '' %}
        &nbsp;<a href="{{ path('bank_access_edit', {bankId: attr.bankId}) }}">{{ 'bank_access_update_login_password'|trans }}</a>
    {% endif %}
{% endspaceless %}
{% endblock %}
