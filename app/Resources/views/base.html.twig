<!DOCTYPE html>
<html>
    <head>
        <title>Bagheera</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% stylesheets filter='lessphp' output='css/main.css' '@KrevindiouBagheeraBundle/Resources/public/less/main.less' %}
            <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header>
            <div id="title"><a href="{{ path('account_summary') }}">Bagheera</a></div>

            {% if app.getUser() is not empty %}
            <p class="logout"><a href="{{ path('logout') }}">{% trans %}userLogoutLink{% endtrans %}</a></p>

            <nav>
                <ul>
                    <li><a href="{{ path('user_register') }}">{% trans %}menuHome{% endtrans %}</a></li>
                    <li><a href="{{ path('user_profile') }}">{% trans %}menuProfile{% endtrans %}</a></li>
                    {# <li><a href="{{ path('share_list') }}">{% trans %}menuShares{% endtrans %}</a></li> #}
                    {# <li><a href="{{ path('report_ist') }}">{% trans %}menuReports{% endtrans %}</a></li> #}
                    {# {% if app.getUser().getIsAdmin() %} #}
                    {# <li><a href="{{ path('user_list') }}">{% trans %}menuAdminUsers{% endtrans %}</a></li> #}
                    {# <li><a href="{{ path('category_list') }}">{% trans %}menuAdminCategories{% endtrans %}</a></li> #}
                    {# {% endif %} #}
                </ul>
            </nav>
            {% else %}
            <nav>
                <ul>
                    <li><a href="{{ path('user_register') }}">{% trans %}userRegisterLink{% endtrans %}</a></li>
                    <li><a href="{{ path('user_forgot_password') }}">{% trans %}userForgotPasswordLink{% endtrans %}</a></li>
                </ul>
            </nav>
            {% endif %}
        </header>

        <section id="content">
            {% block content %}{% endblock %}
            <div class="clear"></div>
        </section>

        <footer>
            <p id="copyright">Bagheera Â© {{ "now" | date("Y") }}</p>
        </footer>

        {% block javascripts %}{% endblock %}
    </body>
</html>
